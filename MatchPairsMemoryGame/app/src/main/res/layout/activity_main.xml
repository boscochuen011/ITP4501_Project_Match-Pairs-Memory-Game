<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.matchpairsmemorygame.FullScreenVideoView
        android:id="@+id/backgroundVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Match Pairs Memory Game"
        android:textSize="40sp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Play"
                android:textColor="@android:color/white"
                android:background="@drawable/transparent_button"
                android:textSize="18sp"
                android:padding="16dp"
                />

            <Button
                android:id="@+id/gameRankingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="@drawable/transparent_button"
                android:padding="16dp"
                android:text="Game Ranking" />

            <Button
                android:id="@+id/yourRecordsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="16dp"
                android:background="@drawable/transparent_button"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="Your Records" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Close"
                android:background="@drawable/transparent_button"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</FrameLayout>